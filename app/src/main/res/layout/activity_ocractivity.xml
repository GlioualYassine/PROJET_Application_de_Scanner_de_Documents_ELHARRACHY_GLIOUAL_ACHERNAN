<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">

    <!-- Aperçu de l'image -->
    <ImageView
        android:id="@+id/imageViewPreview"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:layout_marginBottom="16dp"
        android:background="#DDDDDD" />

    <!-- Zone de texte pour afficher le texte reconnu -->
    <EditText
        android:id="@+id/editTextResult"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="Texte reconnu"
        android:gravity="start|top"
        android:padding="12dp"
        android:background="#EEEEEE"
        android:inputType="textMultiLine" />

    <!-- Boutons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btnPerformOCR"
            android:layout_width="0dp"
            android:layout_height="56dp"
            app:cornerRadius="8dp"
            android:minHeight="56dp"
            android:layout_weight="1"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:layout_marginStart="8dp"
            android:text="Reconnaître le Texte"
            android:backgroundTint="#9694FF" />

        <Button
            android:id="@+id/btnCopyText"
            android:layout_width="0dp"
            android:layout_height="56dp"
            app:cornerRadius="8dp"
            android:minHeight="56dp"
            android:layout_weight="1"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:layout_marginStart="8dp"
            android:text="Copier le Texte"
            android:backgroundTint="#9694FF" />
    </LinearLayout>
</LinearLayout>
