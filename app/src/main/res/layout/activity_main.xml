<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".MainActivity">

    <!-- Barre de recherche -->
    <androidx.cardview.widget.CardView
        android:id="@+id/searchBar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/etSearch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:hint="Rechercher"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="#000"
            android:textSize="16sp"
            android:inputType="text" />
    </androidx.cardview.widget.CardView>

    <!-- Grille des boutons -->
    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/mainOptionsGrid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:columnCount="4"
        android:alignmentMode="alignMargins"
        android:useDefaultMargins="true"
        app:layout_constraintTop_toBottomOf="@id/searchBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Bouton "Smart Scan" -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="8dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/btnCamera"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_scan"
                android:contentDescription="Smart Scan" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Smart Scan"
                android:textColor="#000"
                android:textSize="12sp"
                android:gravity="center" />
        </LinearLayout>

        <!-- Bouton "PDF Tools" -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="8dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/btnPdfTools"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_pdf_tools"
                android:contentDescription="PDF Tools" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="PDF Tools"
                android:textColor="#000"
                android:textSize="12sp"
                android:gravity="center" />
        </LinearLayout>

        <!-- Bouton "Import Picture" -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="8dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/btnImportPicture"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_import_picture"
                android:contentDescription="Import Picture" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Import Picture"
                android:textColor="#000"
                android:textSize="12sp"
                android:gravity="center" />
        </LinearLayout>

        <!-- Bouton "Import File" -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="8dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/btnImportFile"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_import_file"
                android:contentDescription="Import File" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Import File"
                android:textColor="#000"
                android:textSize="12sp"
                android:gravity="center" />
        </LinearLayout>
    </androidx.gridlayout.widget.GridLayout>

    <!-- Bouton "Actualiser" -->
    <Button
        android:id="@+id/btnRefresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Actualiser"
        android:textColor="#FFF"
        android:backgroundTint="#9B51E0"
        app:layout_constraintTop_toBottomOf="@id/mainOptionsGrid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Section "Documents récents" -->
    <TextView
        android:id="@+id/tvRecentDocs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:text="Documents récents"
        android:textSize="18sp"
        android:textColor="#000"
        app:layout_constraintTop_toBottomOf="@id/btnRefresh"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- RecyclerView pour afficher les documents récents -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvRecentDocs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
